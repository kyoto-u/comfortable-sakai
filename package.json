    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./src/tests/setupJest.js"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
